<%= render "shared/header" %>

<div class="memory-main">
  <div class="memory-title">人の情報を入力</div>
  <%= form_with model: @person, local: true do |f| %>

  <%= render 'shared/error_messages', model: @person %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お名前(全角)</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :first_name, class:"input-name", id:"first-name", placeholder:"例) 記憶" %>
      <%= f.text_area :last_name, class:"input-name", id:"last-name", placeholder:"例) 太郎" %>
    </div>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お名前カナ(全角)</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :first_name_reading, class:"input-name", id:"first-name-kana", placeholder:"例) キオク" %>
      <%= f.text_area :last_name_reading, class:"input-name", id:"last-name-kana", placeholder:"例) タロウ" %>
    </div>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">生年月日</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 1),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">趣味</label>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :hobby, class:"input-hobby", id:"first-name", placeholder:"例) ゴルフ" %>
    </div>
  </div>
  <div class="items-explain">
    <div class="form-text">
      フリースペース
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :free_space, class:"items-text", id:"item-info", placeholder:"フリースペース（200文字まで）" ,rows:"5" ,maxlength:"200" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Email</label>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :email, class:"input-hobby", id:"first-name", placeholder:"例) memory@memory" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit "記録する" ,class:"memory-btn" %>
    <%=link_to 'もどる', root_path, class:"back-btn" %>
  </div>
  <% end %>
</div>

<%= render "shared/footer"%>